@model List<ProyectoSGCE.Models.Subfamily>

@{
    Layout = "_LayoutStudent";
    //List<Order> orders = ViewBag.Orders;
}

<div class="container my-4 content">

    <form name="form-order" id="form-order" class="row g-2 form-input" asp-controller="Subfamily" asp-action="SearchSubfamilyView"
          method="post" class="form-inline">
        <div class="col-12 d-flex">
            <div class="col-xl-3 col-md-4 col-sm-6 mx-1">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="subfamily" name="subfamily" placeholder="Subfamilia" required>
                    <label for="floatingInput" style="color:black">Ingrese subfamilia</label>
                </div>
            </div>
            <div class="col-xl-1 col-md-4 col-sm-3 mb-3 mx-2">
                <input type="submit" class="btn btn-secondary" name="search" value="Buscar">
            </div>

        </div>
    </form>

    <div class="col-xs-3 d-inline-block">

        <form asp-action="SearchSubfamilyView" method="post" class="form-inline">

            <input type="text" name="subfamily" id="subfamily" value="@ViewBag.Name" hidden>
            <input class="btn btn-dark" type="submit" value="Asc" />
        </form>
    </div>
    <div class="col-xs-3 d-inline-block">
        <form asp-action="SearchSubfamilyDesc" class="form-inline">
            <input type="text" name="subfamilyDesc" id="subfamilyDesc" value="@ViewBag.Name" hidden>
            <input class="btn btn-dark" type="submit" value="Desc" />
        </form>
    </div>



    <hr class="border-success  border-3">
    <div class="col-12 table-responsive">
        <table class="table table-sm table-striped">
            <tr class="bg-info">
                <th>Subfamilia</th>
                <th>Cantidad de Géneros</th>
                <th>Cantidad de Especies</th>
            </tr>

            @foreach (Subfamily subfamily in ViewBag.Subfamilies)
            {
                <tr class="table-success">
                    <td>@subfamily.NameSubfamily</td>
                    <td>@subfamily.TotalGenres</td>
                    <td>@subfamily.TotalSpecies</td>
                </tr>
            }
        </table>
    </div>

</div>

@model ProyectoSGCE.Models.User

@{
    ViewData["Title"] = "Register";
}


<div class="container my-4 content">

    <div class="text-center">

        <form class="row g-3 form-input" method="post" asp-action="RegisterUser">
            <h2 class="title">Registrar Usuario</h2>
            @{
                if (!TempData["RegistroExitoso"].Equals("empty"))
                {
                    bool registroExitoso = TempData["RegistroExitoso"] as bool? ?? true;
                    if (registroExitoso)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            ¡Usuario registrado!
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    else if (!registroExitoso)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            ¡Ya existe ese nombre de usuario!
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                }

            }
            <hr class="border-success border-3">
            <div class="col-12 mb-3 d-flex justify-content-center">
                <div class="col-3 mb-3" id="div-order">
                    <label for="Username" class="form-label">Nombre usuario</label>
                    <input class="form-control" id="Username" name="Username" type="text" required>
                </div>
            </div>
            <div class="col-12 mb-3 d-flex justify-content-center">
                <div class="col-3 mb-3" id="div-order">
                    <label for="user" class="form-label">Contraseña usuario</label>
                    <input class="form-control" id="Password" name="Password" type="text" required>
                </div>
            </div>
            <div class="col-12 mb-3 d-flex justify-content-center">
                <div class="p-3 bg-success bg-opacity-10 border border-dark rounded" id="div-checks">
                    <div class="col-12">
                        <label class="form-label">Rol</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="professorRadio" value="1" checked>
                            <label class="form-check-label" for="professorRadio">Docente</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="studentRadio" value="2">
                            <label class="form-check-label" for="studentRadio">Estudiante</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 mb-3 d-flex justify-content-center">
                <div class="col-1 mb-3">
                    <input class="btn btn-success" type="submit" value="Registrar">
                </div>
            </div>
        </form>

        <form method="post" asp-action="RedirectLogin" asp-controller="User">
            <div class="row justify-content-center">
                <div class="col-4 mb-3">
                    <input class="btn btn-success" type="submit" value="Iniciar sesión">
                </div>
            </div>
        </form>
    </div>
</div>

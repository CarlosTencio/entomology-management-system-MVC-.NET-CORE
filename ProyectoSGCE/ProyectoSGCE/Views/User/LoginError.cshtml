@{
    ViewData["Title"] = "Login page";
}



<link rel="stylesheet" href="~/css/Login.css" />
<link rel="stylesheet" href="~/css/style.css" />
<style>
    /* Estilos personalizados */
    .custom-container {
        height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 1em;
    }




</style>


    <div class="container my-4">

        <div class="container-fluid custom-container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="@Url.Content("~/img/login.jpg")" class="img-fluid mx-auto d-block mb-4" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form asp-action="LoginUser" asp-controller="User">
                        <!-- username input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Ingrese nombre de usuario" required>
                        <label class="form-label" style="color:aliceblue;font-size:1.5em" for="form3Example3">Nombre usuario</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Ingrese contraseña" required>
                        <label class="form-label" style="color:aliceblue;font-size:1.5em" for="form3Example4">Contraseña</label>
                        </div>
                    <div class="d-flex justify-content-between">
                        <input type="submit" class="btn btn-primary btn-lg" value="Iniciar sesión">
                    </div>
                    </form>
                    <div class="d-flex justify-content-between" style="margin-top:1em">
                    <form method="post" asp-action="Register">
                        <input type="submit" class="btn btn-secondary btn-lg" value="Crear cuenta">
                    </form>
                    
                    </div>
                </div>
            <div class="alert alert-danger text-center mb-3" role="alert">Inicio de sesión incorrecto, usuario o contraseña incorrectos.</div>
            </div>
       
        </div>
    
    </div>







